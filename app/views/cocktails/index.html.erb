<br>
<div class="container">

  <div class="row">
<% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4">
      <%= link_to cocktail_path(cocktail) do %>
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.photo, height: 200, crop: :fill %>')");">
        <div class="card-category">
          <%= '🍹' * (cocktail.reviews.map { |review| review.rating }.sum / (cocktail.reviews.size)) unless cocktail.reviews.size.zero? %>
          </div>
        <div class="card-description">
          <h2><%= cocktail.name %></h2>
        </div>
      </div>
      <% end %>
    </div>

<% end %>
  </div>
<hr>
<div class='container text-center'>
  <%= link_to 'Add a new cocktail', new_cocktail_path, class: 'btn btn-primary btn-large' %>
</div>

</div>
